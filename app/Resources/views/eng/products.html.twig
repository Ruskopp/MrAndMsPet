{% extends 'eng/base.html.twig' %}

{% block body %}
    <div class="my row row">
        <div class="col-md-3">

            <div class=" my-subcategory-div list-group">
                {% if category is defined %}

                    <a href="{{ path('dog_products', {
                        'lang':'srp',
                        'category' : category,
                    }) }}" class="my-subcategory list-group-item">ALL PRODUCTS</a>

                    {% for menuitem in menuitems %}
                        <hr style="margin-right: 10%;"/>
                        <a href="{{ path('dog_products', {
                            'lang':'srp',
                            'category' : menuitem.category.titleEng,
                            'subcategory': menuitem.titleEng
                        }) }}" class="my-subcategory list-group-item">{{ menuitem.titleEng | upper }}</a>
                    {% endfor %}

                {% else %}

                    <a href="{{ path('cat_products', {
                        'lang':'srp',
                    }) }}" class="my-subcategory list-group-item">SVI PROIZVODI</a>

                    {% for menuitem in menuitems %}
                        <hr style="margin-right: 10%;"/>
                        <a href="{{ path('cat_products', {
                            'lang':'srp',
                            'category' : menuitem.titleEng,
                        }) }}" class="my-subcategory list-group-item">{{ menuitem.titleSr | upper }}</a>
                    {% endfor %}

                {% endif %}
            </div>
        </div>

        <div class="col-md-9 col-sm-9 col-xs-12">
            {% for product in  products %}


                <div class="col-md-4 col-sm-4 col-xs-12">

                    <div class="thumbnail">
                        <a class="thumbnail" href="#">
                            <img class="img-responsive" src="{{ (products_dir ~ product.image ) | imagine_filter('my_thumb') }}">
                        </a>
                        <div class="caption">
                            <h4>{{ product.titleEng }}
                                <br/>
                                <h4 class="pull-right"> {{ product.price }} rsd.</h4>
                                <br/>
                            </h4>

                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}