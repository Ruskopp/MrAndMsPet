        <![endif]-->

        <!-- MyStyle -->
        <link href="{{ asset('css/mystyle.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="my-body">


<div class="container">
    <div class=" my-language">
        <ul>
            <li><a href="{{ urlEng }}">ENG</a></li>
            <li><a href="{{ urlSrp }}">SRP</a></li>
        </ul>
    </div>

    <div class="my-brand brand"><img src="{{ asset('img/logo.jpg') }}" class="my-logo" alt="">
    </div>

    {% block navigation %}
    <!-- Navigation -->
    <div id="navigation">
        <nav class="my-hr navbar navbar-default" role="navigation" style="margin-bottom: 0 ">


            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-menu">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the specificCategory is collapsed -->
                <a class="navbar-brand" href="{{ path('home') }}">Mr. & Mrs. Pet</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="main-menu" style="background-color:white;">
                <hr/>
                <ul class="my-menu nav navbar-nav ">

                    <li>
                        <a href="{{ path('home', {'lang' : 'srp'}) }}">POČETNA</a>
                    </li>
                    <li class="my-dropdown-menu-item" id="action">
                        <a href="{{ path('category', {'lang' : 'srp'}) }}">PROIZVODI <span
                                    class="glyphicon glyphicon-menu-down"></span></a>


                    </li>
                    <li>
                        <a href="{{ path('about', {'lang' : 'srp'}) }}">O NAMA</a>
                    </li>
                    <li>
                        <a href="{{ path('contact', {'lang' : 'srp'}) }}">KONTAKT</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- /.container -->

        </nav>

        <div id="reaction" style="display:none">
            <div class="my-dropdown-content my-dropdown-contennt-container">
                <nav class="navbar navbar-default" role="navigation" style="margin-bottom: 0 ">


                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" style="padding-left: 0; padding-right: 0; "
                         id="dropdown-menu">

                        <ul class="my-dropdown-menu nav navbar-nav ">
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'apparel'
                                }) }}">
                                    <img src="{{ asset('img/clothes.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    ODEĆA</a>
                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'bedding'
                                }) }}"><img src="{{ asset('img/bedding.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    KREVETI
                                </a>

                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'spa'
                                }) }}"><img src="{{ asset('img/spa.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    SPA
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'toys'
                                }) }}"><img src="{{ asset('img/toys.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    IGRAČKE
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'accessories'
                                }) }}">
                                    <img src="{{ asset('img/accessories.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    AKSESOARI
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'feeding'
                                }) }}">
                                    <img src="{{ asset('img/feeding.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    POSUDE
                                </a>

                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'dog',
                                    'category' : 'food'
                                }) }}">
                                    <img src="{{ asset('img/food.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    HRANA
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('all_products', {
                                    'lang':'srp',
                                    'animal' : 'cat',
                                    'category' : 'none'
                                }) }}"><img src="{{ asset('img/cats.jpg') }}" class="my-logo" alt="">
                                    <br/>
                                    MAČKE
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->

                    <!-- /.container -->

                </nav>

            </div>
        </div>

    </div>
</div>
