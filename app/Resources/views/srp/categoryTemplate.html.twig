{% block body %}
    <div class="my row row">
        {% block menu %}{% endblock %}



        <div class="col-md-9 col-sm-9 col-xs-12">
            {% for product in  products %}


                <div class="col-md-4 col-sm-4 col-xs-12">

                    <div class="thumbnail">
                        <a class="thumbnail" href="#">
                            <img class="img-responsive" src="{{ asset('img/FuzzYard-Category-Bedding.jpg') }}">
                        </a>
                        <div class="caption">
                            <h4>{{ product.titleSrp  }}
                                <br/>
                                <h4 class="pull-right"> {{ product.price}} rsd.</h4>
                                <br/>
                            </h4>

                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}